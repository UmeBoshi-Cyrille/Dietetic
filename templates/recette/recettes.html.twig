{% extends 'base.html.twig' %}

{% block title %}Liste recettes{% endblock %}

{% block main %}
    <div class="container key_bg2">
        <a href="{{ path('app_accueil') }}" class="btn key_bg5 mt-4 ms-2">Retour à l'accueil</a>
        <h1 class="mt-4">Liste des recettes</h1>
        <ul class="container-fluid d-flex flex-column">
            {% if app.user %}
                {% for recipe in recipes %}
                    <li class="mt-3 border border-4 p-4">
                        <a href="{{ path('app_recette', {'id' : recipe.id }) }}" class="w-100 h-100"></a>
                        <div class="d-flex justify-content-between">
                            <h4 class="rounded key_bg1 p-1 w-25 text-center">{{ recipe.name|capitalize }}</h4>
                            <span>Créée le {{ recipe.publishedAt|date('d/m/Y') }}</span>
                        </div>
                        <h5 class="mt-3">Description</h5>
                        <p>{{ recipe.description }}</p>
                        <div class="container-fluid d-flex justify-content-center key_bg3">
                            <a href="{{ path('app_recette', {'id' : recipe.id }) }}" class="btn key_bg5 w-25">Consulter</a>
                        </div>
                    </li>
                {% endfor %}
            {% endif %}
        </ul>    
    </div>
    <div class="navigation d-flex justify-content-center mt-4 mb-4">
        {{ knp_pagination_render(recipes) }}
    </div>
{% endblock %}
