{% extends 'base.html.twig' %}

{% block title %}Nouveau Patient{% endblock %}

{% block main %}
    <div class="container">
        <a href="{{ path('app_accueil') }}" class="btn btn-primary mt-4">Retour Ã  l'accueil</a>
        <h1 class="mt-4">Formulaire d'inscription de Nouveau Patient</h1>

        {{ form_start(registerForm) }}
            <div class="form-group">
                {{ form_label(registerForm.lastname)}}
                {{ form_widget(registerForm.lastname) }}
                <div class="form-error">
                    {{ form_errors(registerForm.lastname) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registerForm.firstname)}}
                {{ form_widget(registerForm.firstname) }}
                <div class="form-error">
                    {{ form_errors(registerForm.firstname) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registerForm.email)}}
                {{ form_widget(registerForm.email) }}
                <div class="form-error">
                    {{ form_errors(registerForm.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(registerForm.plainPassword)}}
                {{ form_widget(registerForm.plainPassword) }}
                <div class="form-error">
                    {{ form_errors(registerForm.plainPassword) }}
                </div>
            </div>
            <div class="form-group d-flex flex-column">
                {{ form_label(registerForm.allergenes)}}
                <div>
                    {% for allergene in registerForm.allergenes %}
                        <div class="d-inline-block">
                            {{ form_label(allergene) }}
                            {{ form_widget(allergene, { 'attr': { 'class': 'me-2'}}) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-error">
                    {{ form_errors(registerForm.allergenes) }}
                </div>
            </div>
            <div class="form-group d-flex flex-column">
                {{ form_label(registerForm.regimes)}}
                <div>
                    {% for regime in registerForm.regimes %}
                        <div class="d-inline-block">
                            {{ form_label(regime) }}
                            {{ form_widget(regime, { 'attr': { 'class': 'me-2'}}) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="form-error">
                    {{ form_errors(registerForm.regimes) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_row(registerForm.submit) }}
            </div>

        {{ form_end(registerForm) }}
    </div>
{% endblock %}